<div class="card">
    <div class="card-header">
        Danh mục mới
    </div>

    <div class="card-body">
        <form method="post">
            <div class="form-group">
            <label for="txtCatID">Số thứ tư</label>
            <input type="text" class="form-control" name="catID" id="txtCatID" value="{{this.category.catID}}" readonly>
            </div>
        <div class="form-group">
          <label for="txtCatName">Danh mục</label>
          <input type="text" class="form-control" name="catName" id="txtCatName" value="{{this.category.catName}}" autofocus>
        </div>
        <a class="btn btn-outline-primary" href="/admin/categories" role="button">
            <i class="fa fa-backward" aria-hidden="true"></i>
            List
        </a>
        <button type="submit" class="btn btn-outline-success" formaction="/admin/categories/update">
           <i class="fa fa-check" aria-hidden="true"></i>
            Save
        </button>
        <button type="submit" class="btn btn-outline-danger" formaction="/admin/categories/del">
           <i class="fa fa-trash-o" aria-hidden="true"></i>
            Delete
        </button>
        </form>
    </div>
   
</div>