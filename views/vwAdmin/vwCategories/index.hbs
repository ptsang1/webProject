<div class="card">
    <div class="card-header d-flex">
        <div class="w-50">
        <h4>Quản lý danh mục</h4>
    </div>
    <div class="w-50">
     <a class="btn btn-outline-success float-right" href="/admin/categories/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm danh mục
        </a>
    </div>
    </div>
    {{#if this.empty}}
    <div class="card-body">
            <p class="card-text">Không có dữ liệu</p>
    </div>
    {{else}}
   <table class="table table-hover">
       <thead>
           <tr>
               <th scope="col">Sô thứ tự</th>
               <th scope="col">Danh mục</th>
               <th scope="col">&nbsp;</th>
            </tr>
       </thead>
       <tbody>
           {{#each this.categories}}
           <tr>
               <td scope="row">{{catID}}</td>
               <td>{{catName}}</td>
               <td class="text-right">
                   <a class="btn btn-sm  btn-primary" href="/admin/categories/edit/{{catID}}" role="button">
                       <i class="fa fa-pencil" aria-hidden="true"></i>
                   </a>
               </td>
           </tr>
           {{/each}}
       </tbody>
   </table>
   {{/if}}
</div>