<div class="container-fluid">
  <form method="POST">
    <div class="row ml-2">
        
        <div class="col-md-7">
                <div class="form-group">
                <label for="input-20">Ảnh vật phẩm</label>
                <div class="file-loading">
                <input id="input-20" name="imageProduct" type="file" class="file" data-preview-file-type="image" multiple required>
                </div>
                </div> 
                <div class="form-group">
                    <label for="describeProduct">Mô tả sản phẩm</label>
                    <textarea name="describeProduct" id="describeProduct" cols="30" rows="10" required>

                    </textarea>
                </div>               

        </div>  
         <div class="col-md-5">
            <div class="form-group">
              <label for="name">Tên sản phẩm</label>
              <input type="text" name="productName" id="name" class="form-control" required> 
            </div>
             <div class="form-group">
              <label for="startPrice">Giá khởi điểm</label>
              <input type="text" name="priceCurrent" id="startPrice" class="form-control" required>
            </div>
             <div class="form-group">
              <label for="stepPrice">Bước giá</label>
              <input type="text" name="stepPrice" id="stepPrice" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="immediatePrice">Giá mua ngay</label>
              <input type="text" name="price" id="immediatePrice" class="form-control">
            </div>
            <div class="form-group">
            <label for="exampleFormControlSelect1">Danh mục</label>
            <select class="form-control" id="CatID" name="category">
              {{#each this.categories}}
              <option>{{catName}}</option>
              {{/each}}
              </select>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="autoExtention" name="autoExtention">
              <label class="custom-control-label" for="autoExtention">Tự động gia hạn</label>
            </div>
            <div class="from-group d-flex justify-content-center align-content-center h-25 mt-5">
            <button type="submit" class="btn btn-outline-success btn-block w-100 h-100">
                <i class="fa fa-paper-plane"></i>
                Đăng bán</button>
            </div>
        </div>

    </div>

        </form>
</div>
