
    
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3  ml-2">
               <div class="card">
                    <div class="card-header">
                        <h4>Các Danh Mục</h4>
                     </div>
                    <div class="list-group list-group-flush">
                      {{#each lcCategories}}
                         <a href="/byCat?id={{CatID}}&sort=ASC" class="list-group-item list-group-item-action {{#if isActive}}active{{/if}}">
                            {{CatName}}    
                            {{#if num_of_products}}
                            <span class="badge badge-danger float-right">{{num_of_products}}</span>
                            {{/if}}
                         </a>
                        {{/each}}
                    </div>
                </div>
            </div>
             {{#if this.empty}}
                <div class="card-body">
                     <h3 class="card-text">Không có dữ liệu</h3>
                </div>
             {{else}}
            <div class="col">
                <nav>
                    <div class="jumbotron jumbotron-fluid p-1 m-1" style="background-color: white;">
                        <div class="container">
                            {{#each lcCategories}}
                           {{#if isActive}}
                            <h2 class="display-6">{{CatName}}<h5 class="text-secondary">{{num_of_products}}</h5></h2>
                            {{/if}}
                            {{/each}}
                        </div>
                        <div class="container">
                            
                            <div class="dropdown">
                                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Sắp xếp
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item"  href="/byCat?id={{id}}&sort=ASC">Giá tăng dần</a>
                                    <a class="dropdown-item" href="/byCat?id={{id}}&sort=DESC">Giá giảm dần</a>
                                    <a class="dropdown-item" href="/byCat?id={{id}}&sort=TASC">Thời gian kết thúc tăng dần</a>
                                    <a class="dropdown-item" href="/byCat?id={{id}}&sort=TDESC">Thời gian kết thúc giảm dần</a>
                                </div>
                            </div>
                            
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                {{#each this.product}}
                                <div class="col-md-4 mt-2 mb-3">
                                   <div class="card">
                                        <a href="/detail">
                                        <img src="images/macbook.jpeg" class="card-img-top" alt="..."></a>                    					
                                        <div class="card-body">
                                            <p class="card-text" style="overflow: hidden;">
                                                <b>{{productName}}</b>
                                                <br><small>Giá mua ngay: <br><b>{{format price}}đ</b>
                                                <br>Giá hiện tại: <br><b>{{format priceCurent}}đ</b>
                                                <br>Ra giá bởi: <br><b>{{bidderID}}</b>
                                                <br>Thời gian còn lại: <br><b>{{formatDate timeEnd}}</b>
                                                <br>Số lượt ra giá hiện tại: <b>10</b></small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
         <div class="row d-flex justify-content-end mr-3">
             <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item  {{#unless can_go_prev}}disabled{{/unless}}">
                        <a href="?id={{id}}&sort={{sort}}&page={{prev_value}}" class="page-link" tabindex="-1">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                        </a>
                    </li>
                    {{#each this.page_items}}
                            {{#if this.isActive}}
                            <li class="page-item active">
                            <a href="javascript:;" class="page-link">{{value}}</a>
                            </li>
                            {{else}}
                            <li class="page-item">
                            <a href="?id={{id}}&sort={{sort}}&page={{value}}" class="page-link">{{value}}</a>
                            </li>
                            {{/if}}
                    {{/each}}
                    <li class="page-item {{#unless can_go_next}}disabled{{/unless}}">
                        <a href="?id={{id}}&sort={{sort}}&page={{next_value}}" class="page-link">
                            <i class="fa fa-forward" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
             </nav>
         </div>
            {{/if}}
    </div>
</div>
  